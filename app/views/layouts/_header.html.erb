<div id="header">
  <img src="/images/logo.png" alt="Global Flush Logo"/>

  <div id="login">
    <!-- <a href="#">Login</a> | <a href="#">Register</a> -->
    <% if current_user %>
        Signed in as <%= link_to current_user.email, user_show_path %> | <%= link_to 'Logout', logout_path %>
    <% else %>
        <%= link_to 'Sign in', login_path %> | <%= link_to 'Register', register_path %>
    <% end %>
  </div>

  <div id="switcher"><strong>Male</strong> | <a href="#">Female</a> | <a href="#">Graffiti</a></div>
</div>